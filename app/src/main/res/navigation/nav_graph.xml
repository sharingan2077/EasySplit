<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.easysplit.view.fragments.authentication.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_groupsEmptyFragment"
            app:destination="@id/groupsEmptyFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.easysplit.view.fragments.authentication.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" />
    <fragment
        android:id="@+id/groupCreateFragment"
        android:name="com.example.easysplit.view.fragments.GroupCreateFragment"
        android:label="fragment_group_create"
        tools:layout="@layout/fragment_group_create" >
        <action
            android:id="@+id/action_groupCreateFragment_to_groupsEmptyFragment"
            app:destination="@id/groupsEmptyFragment" />
        <action
            android:id="@+id/action_groupCreateFragment_to_groupsFragment"
            app:destination="@id/groupsFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.easysplit.view.fragments.authentication.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" />
    <fragment
        android:id="@+id/groupEnterFragment"
        android:name="com.example.easysplit.view.fragments.GroupEnterFragment"
        android:label="fragment_group_enter"
        tools:layout="@layout/fragment_group_enter" />
    <fragment
        android:id="@+id/friendsEmptyFragment"
        android:name="com.example.easysplit.view.fragments.FriendsEmptyFragment"
        android:label="friends_empty_fragment"
        tools:layout="@layout/friends_empty_fragment" >
        <action
            android:id="@+id/action_friendsEmptyFragment_to_groupsEmptyFragment"
            app:destination="@id/groupsEmptyFragment" />
        <action
            android:id="@+id/action_friendsEmptyFragment_to_activityFragment"
            app:destination="@id/activityFragment" />
        <action
            android:id="@+id/action_friendsEmptyFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupsEmptyFragment"
        android:name="com.example.easysplit.view.fragments.GroupsEmptyFragment"
        android:label="groups_empty_fragment"
        tools:layout="@layout/groups_empty_fragment" >
        <action
            android:id="@+id/action_groupsEmptyFragment_to_friendsEmptyFragment"
            app:destination="@id/friendsEmptyFragment" />
        <action
            android:id="@+id/action_groupsEmptyFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_groupsEmptyFragment_to_activityFragment"
            app:destination="@id/activityFragment" />
        <action
            android:id="@+id/action_groupsEmptyFragment_to_groupCreateFragment"
            app:destination="@id/groupCreateFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.easysplit.view.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_groupsEmptyFragment"
            app:destination="@id/groupsEmptyFragment" />
        <action
            android:id="@+id/action_profileFragment_to_friendsEmptyFragment"
            app:destination="@id/friendsEmptyFragment" />
        <action
            android:id="@+id/action_profileFragment_to_activityFragment"
            app:destination="@id/activityFragment" />
    </fragment>
    <fragment
        android:id="@+id/activityFragment"
        android:name="com.example.easysplit.view.fragments.ActivityFragment"
        android:label="fragment_activity"
        tools:layout="@layout/fragment_activity" >
        <action
            android:id="@+id/action_activityFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_activityFragment_to_friendsEmptyFragment"
            app:destination="@id/friendsEmptyFragment" />
        <action
            android:id="@+id/action_activityFragment_to_groupsEmptyFragment"
            app:destination="@id/groupsEmptyFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupsFragment"
        android:name="com.example.easysplit.view.fragments.GroupsFragment"
        android:label="fragment_groups"
        tools:layout="@layout/fragment_groups" />
</navigation>
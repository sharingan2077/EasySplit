<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.authentication.ResetPasswordVerificationFragment"
    android:orientation="vertical"
    android:layout_marginTop="51dp">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Введите свой email и мы пришлем вам ссылку для сброса пароля"
        style="@style/InterSemiBold24"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="75dp" />

    <EditText
        android:id="@+id/email"
        style="@style/InterRegular16"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/style_login"
        android:hint="Email"
        android:paddingStart="16dp"
        android:textColorHint="@color/grey"
        android:inputType="textEmailAddress"
        android:layout_gravity="center" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send_code"
        style="@style/InterSemiBold18"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:background="@drawable/style_for_verification"
        android:text="Отправить код"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="51dp"
    android:orientation="vertical"
    tools:context=".view.fragments.authentication.ResetPasswordFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <EditText
        android:id="@+id/newPassword"
        style="@style/InterRegular16"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:background="@drawable/style_login"
        android:hint="@string/textResetPassword"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:textColorHint="@color/grey" />
    <EditText
        android:id="@+id/confirmPassword"
        style="@style/InterRegular16"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/style_login"
        android:hint="@string/textResetPassword2"
        android:paddingStart="16dp"
        android:textColorHint="@color/grey"
        android:inputType="textPassword"
        android:layout_gravity="center" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send_code"
        style="@style/InterSemiBold18"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:background="@drawable/style_for_verification"
        android:text="@string/textContinue"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"/>

</LinearLayout>
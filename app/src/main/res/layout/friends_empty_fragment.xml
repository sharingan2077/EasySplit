<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".trash.FriendsEmptyFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/picture_no_groups" />

    <TextView
        style="@style/InterRegular20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="Друзья появятся здесь" />

    <LinearLayout
        android:id="@+id/addFriend"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/style_create_group"
        android:layout_gravity="center"
        android:layout_marginTop="150dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_add_friend"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textView5"
            style="@style/InterMedium18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить друзей"
            android:textColor="@color/aqua"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>